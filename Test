minBtn.Parent = top

local btnFrame = Instance.new("Frame")
btnFrame.Size = UDim2.new(1, 0, 1, -40)
btnFrame.Position = UDim2.new(0, 0, 0, 40)
btnFrame.BackgroundTransparency = 1
btnFrame.Parent = main


dcBtn.BackgroundTransparency = 0.5
dcBtn.BorderSizePixel = 0
dcBtn.Text = "Copy Discord Invite"
dcBtn.TextColor3 = Color3.fromRGB(255,255,255)
dcBtn.Font = Enum.Font.GothamBold
dcBtn.TextSize = 14
dcBtn.Parent = btnFrame

